//Horacio Morales -Ej 4 Digitos

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;


int main(){
	
	int num,aux,resto,numinv=0;
	cout<<"Ingrese un numero"<<endl;
	cin>>num;
	aux=num;
	while(aux>0){
	resto=aux%10;
	aux=aux/10;
	numinv=numinv*10+resto;}
	if(numinv==num){
	cout<<"El numero es capicua";}
	else{cout<<"El numero no es capicua";}
	getch();
}
