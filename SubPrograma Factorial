#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
int factorial(int n);

int main()
{ int n,i;
	cout<<"Ingrese un numero:";
	cin>>n;
	cout<<"Su factorial es: "<<factorial(n);
	getch();
}

int factorial(int n)
{int fact=1,i;
	if(n==0)
{n=1;}
else{fact=1;
	for(i=1;i<=n;i++)
	{	fact=fact*i;
		}}
return fact;
}
