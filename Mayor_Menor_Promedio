#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;


void main()
{ int n,numero,mayor=0,menor=128;
float suma=0,promedio;
cout<<"Ingrese el numero de elementos:";
cin>>n;
for(int i=1;i<=n;i++)
{ cout<<"Ingrese un numero:";
	cin>>numero;
	if(mayor<numero)
		mayor=numero;
	if(menor>numero)
		menor=numero;
	suma=suma+numero;
}
promedio=suma/n;

cout<<"El mayor es:"<<mayor;
cout<<"El menor es:"<<menor;
cout<<"El promedio es:"<<promedio;
	getch();
}
